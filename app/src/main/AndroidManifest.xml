<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.achmad.sun3toline.kepoin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:name=".KepoApps"
        android:icon="@mipmap/ic_launcher"
        android:label="Kepo Indonesia"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.achmad.sun3toline.kepoin.activity.KepoIn"
            android:label="Kepo Indonesia"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <activity
            android:name="com.achmad.sun3toline.kepoin.activity.Province"
            android:label="Propinsi"
            android:parentActivityName="com.achmad.sun3toline.kepoin.activity.KepoIn">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.achmad.sun3toline.kepoin.activity.KepoIn" />
        </activity>

        <activity android:name="com.achmad.sun3toline.kepoin.activity.AddPostFragment" />
        <activity android:name="com.achmad.sun3toline.kepoin.activity.Post" />
        <activity android:name="com.achmad.sun3toline.kepoin.activity.PostActivity" />

        <activity
            android:name="com.achmad.sun3toline.kepoin.activity.RegisterActivity"
        android:label="Sign in"
            android:parentActivityName="com.achmad.sun3toline.kepoin.activity.LoginActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.achmad.sun3toline.kepoin.activity.LoginActivity" />
        </activity>

        <activity
            android:name="com.achmad.sun3toline.kepoin.activity.LoginActivity"
        android:label="Login"/>

        <activity
            android:name="com.achmad.sun3toline.kepoin.activity.SetupActivity"
            android:label="Profile"
            android:parentActivityName="com.achmad.sun3toline.kepoin.activity.KepoIn">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.achmad.sun3toline.kepoin.activity.KepoIn" />
        </activity>

        <activity
            android:name="com.achmad.sun3toline.kepoin.activity.BlogSingleActivity"
            android:label="Detail Post"
            android:parentActivityName="com.achmad.sun3toline.kepoin.activity.PostActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.achmad.sun3toline.kepoin.activity.PostActivity" />
        </activity>

    </application>

</manifest>